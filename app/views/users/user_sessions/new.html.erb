<% provide(:title, 'User Sign In') %>

<h2>User Sign In</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="hform"><%= f.label :email %></div>
  <div><%= f.email_field :email %></div>

  <div class="hform"><%= f.label :password %></div>
  <div><%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> Remember me</div>
  <% end -%><br>

  <div><%= f.submit "Sign In" %></div>
<% end %>

<div>If you are a bar, Sign In <%= link_to 'here', new_bar_session_path %></div>

<%= render :partial => "devise/shared/links" %>