<% if bar_signed_in? %>
  <%= render 'bars/home' %>
<% elsif user_signed_in? %>

  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab-u1" data-toggle="tab">My Reservations</a></li>
    <li><a href="#tab-u2" data-toggle="tab">Find Bars</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab-u1">
      <%= render 'users/reservations_list' %>
    </div>
    <div class="tab-pane" id="tab-u2">
      <%= render 'searches/new_search' %>
    </div>
  </div>

<% else %>
  <div class="center">
    <h1 class="welcome">Welcome to BarSlice</h1>
    <h2>Booking event space at bars should be easier. BarSlice lets you find the right space to fit your event needs and book it online. Learn more <%= link_to 'here', about_path %></h2>
  </div>
  <%= render 'searches/new_search' %>
<% end %>