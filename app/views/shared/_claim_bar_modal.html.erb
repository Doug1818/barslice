<script type="text/javascript">
$("#claimbarModal-<%= room.id %>").on('show resize', function () {
    var modal = $(this);
    modal.css({"left":0}).css({"width":"auto","height":"auto","margin-left": (- modal.outerWidth() / 2), "margin-top": (- modal.outerHeight() / 2), "left":"50%"});})
</script>