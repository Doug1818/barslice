<ul class="bars span8">
  <% Bar.all.each do |bar| %>
      <li class="bar">
        <span class="title">
          <span class="strong"><%= link_to bar.name, bar_path(bar) %></span> | 
          <%= bar.neighborhood %>
        </span>
        <ul class="rooms">
          <% bar.rooms.each do |room| %>
            <li class="room">
              <% if !bar_signed_in? %>
                <span style="float:right;margin-top:5px;">
                  <% if bar.claimed == true %>
                    <% if user_signed_in? %>
                      <%= link_to "Reserve", new_reservation_path(room), class: "btn btn-small btn-info reserve" %>
                    <% else %>
                      <%= link_to "Reserve", new_user_registration_path(room), class: "btn btn-small btn-info reserve" %>
                    <% end %>
                  <% else %>
                    <%= render 'shared/reserve_modal', object: bar, room: room %><br>
                    <%= render 'shared/claim_bar_modal', object: bar, room: room %>
                  <% end %>
                </span>
              <% end %>
              <span style="float:left;width:80%;margin-top:5px;">
                <span class="strong" style="font-size:1.05em"><%= link_to room.name, room_path(room) %></span> |
                <% if room.privacy == 1 %> Private room
                <% elsif room.privacy == 2 %> Semi-private room
                <% else %> Shared space
                <% end %>
                <%= render 'shared/deets', room: room %>
              </span>
              <div class="nofl">
                <strong>Description: </strong>
                <%= room.description.truncate(190) %>
              </div>
            </li>
          <% end %>
        </ul>
      </li>
  <% end %>
</ul>