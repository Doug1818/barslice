<% provide(:title, 'Add room') %>

<div style="text-align:right;"><%= link_to "Back to rooms page", rooms_path %></div>

<h1>Add a new room</h1>
<div>
	<%= form_for( @room, html: { multipart: true } ) do |f| %>
		<%= render 'fields', f: f %>
		<%= f.submit "Submit", class: "btn btn-large" %>
	<% end %>
</div>