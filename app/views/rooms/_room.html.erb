<li class="room span8">
	
<% if !bar_signed_in? %>	
	<div><a class="btn btn-small btn-info" data-toggle="modal" style="float:right;font-size:1.04em" href="#reserveModal" >Reserve</a></div>
	<%= render 'shared/reserve_modal' %>
<% end %>
	<span class="title">
	    <span class="strong"><%= link_to room.name, room_path(room) %></span> | 
	    <% if room.privacy == 1 %> Private room
	    <% elsif room.privacy == 2 %> Semi-private room
	    <% else %> Shared space
	    <% end %>
	</span><br />
	<span>
		<span class="strong"><%= link_to Bar.find(room.bar_id).name, bar_path(Bar.find(room.bar_id)) %></span> |
	    <%= Bar.find(room.bar_id).neighborhood %>
    </span><br />
	<%= render 'shared/deets', room: room %>
	<strong>Description: </strong>
	<%= room.description.truncate(180) %>
	<div>
		<% if !@sfiltered.nil? %>
			<% a = [] %>
			<% @sfiltered.each do |s| %>
				<% b = s.rooms %>
				<% if b.include?(room) %>
					<% a.push(s) %>
				<% end %>
			<% end %>
			<% if a.any? %>
				<strong>Specials:</strong>
				<% c = a.count - 1 %>
				<% a.each_with_index do |special, idx| %>
				  <%= link_to special.name, special_path(special) %><%= " â€¢ " unless idx == c %>
				<% end %>
			<% end %>
		<% end %>
	</div>
</li>