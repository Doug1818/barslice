<h1><%= current_bar.name %></h1>

<ul class="nav nav-tabs">
	<li class="active"><a href="#tab1" data-toggle="tab">Rooms</a></li>
	<li><a href="#tab2" data-toggle="tab">Reservation policy</a></li>
    <li><a href="#tab3" data-toggle="tab">Specials</a></li>
    <li><a href="#tab4" data-toggle="tab">Reservations</a></li>
    <li><a href="#tab5" data-toggle="tab">Bar info</a></li>
</ul>

<div class="tab-content span10">
	<div class="tab-pane active" id="tab1">
      <%= render 'bars/room', object: current_bar %>
	</div>
	
	<div class="tab-pane" id="tab2">
		<% if current_bar.respolicy %>
			<strong>Description:</strong><br>
	    	<%= render 'bars/respolicy', object: current_bar %>
	    	<div class="nofl">
				<%= link_to "Delete", current_bar.respolicy, method: :delete, confirm: "You sure?" %> | 
				<%= link_to "Edit", edit_respolicy_path(current_bar) %>
			</div>
	  	<% else %>
			<%= render 'respolicies/new' %>
		<% end %>
	</div>
	
	<div class="tab-pane" id="tab3">
		<%= render 'bars/specials_list', object: current_bar %>
	</div>
	
	<div class="tab-pane" id="tab4">
      Reservations
	</div>
	
	<div class="tab-pane bar_info_left" id="tab5">
    	<%= render 'shared/bar_info', object: current_bar %>
	</div>
</div>
