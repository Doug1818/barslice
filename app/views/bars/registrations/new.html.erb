<% provide(:title, 'Bar sign up') %>

<h2>Bar sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name, "Bar name" %><br />
  <%= f.text_field :name %></div>  

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :address, "Bar address" %><br />
  <%= f.text_field :address %></div>

  <div><%= f.label :neighborhood %><br />
  <%= f.select :neighborhood, Bar::NEIGHBORHOODS %></div>

  <div><%= f.label :phone, "Phone number" %><br />
  <%= f.text_field :phone %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
