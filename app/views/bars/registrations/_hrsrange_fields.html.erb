<div class="dfield" style="width:60%;">
	Open:  <%= f.time_select :open, { ampm: true, default: Time.now.change(hour: 11) }, class: "time" %>
	Close: <%= f.time_select :close, { ampm: true, default: Time.now.change(hour: 4) }, class: "time" %>

	<%= f.hidden_field :_destroy %>
	<span class="remove"><%= link_to "Remove", '#', class: "remove_fields" %></span><br />

	<div>
		<%= f.check_box :sunday %> S
		<%= f.check_box :monday %> M
		<%= f.check_box :tuesday %> T
		<%= f.check_box :wednesday %> W
		<%= f.check_box :thursday %> T
		<%= f.check_box :friday %> F
		<%= f.check_box :saturday %> S
	</div>
</div>