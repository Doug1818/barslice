<div class="dfield" style="width:60%;">
	
	Open:
	<% if f.object.open? %>
		<%= f.select :open, TIMES.keys, { selected: TIMES.key(f.object.open) }, class: "time" %>
	<% else %>
		<%= f.select :open, TIMES.keys, { selected: "11:00am" }, class: "time" %>
	<% end %>

	Close:
	<% if f.object.close? %>
		<%= f.select :close, TIMES.keys, { selected: TIMES.key(f.object.close) }, class: "time" %>
	<% else %>
		<%= f.select :close, TIMES.keys, { selected: "4:00am" }, class: "time" %>
	<% end %>

	<%= f.hidden_field :_destroy %>
	<%= link_to "Remove", '#', class: "remove_fields remove" %><br />

	<div>
		<%= f.check_box :sunday %> S
		<%= f.check_box :monday %> M
		<%= f.check_box :tuesday %> T
		<%= f.check_box :wednesday %> W
		<%= f.check_box :thursday %> T
		<%= f.check_box :friday %> F
		<%= f.check_box :saturday %> S
	</div>
</div>